@model DoctorsOffice.DocumentGenerator.DocumentTemplates.Prescription.PrescriptionTemplateData
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Prescription - @Model.CreationDate.ToShortDateString() @Model.CreationDate.ToShortTimeString()</title>
    <!-- CSS only -->
    <link
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
        rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
        crossorigin="anonymous">
    <!-- JavaScript Bundle with Popper -->
    <script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
        crossorigin="anonymous"></script>
    <style>
        html {
          font-size: 62.5%;
        }
    </style>
</head>
<body>
<div class="container mt-2">
    <h1 class="mb-5 text-center">Prescription</h1>
    <div class="d-flex justify-content-around text-center">
        <span>
            <strong>Issue date</strong><br/>
            @Model.CreationDate.ToShortDateString() @Model.CreationDate.ToShortTimeString()
        </span>
        <span>
            <strong>Fulfillment deadline</strong><br/>
            @Model.FulfillmentDeadline.ToShortDateString()
        </span>
    </div>
    <hr/>
    <table class="col-5 ms-3">
        <tbody>
        <tr>
            <td>
                <strong>Doctor</strong>
            </td>
            <td>@Model.DoctorFullName</td>
        </tr>
        <tr>
            <td class="align-top">
                <strong>Patient</strong>
            </td>
            <td>
                <p class="mb-0">@Model.PatientFullName</p>
                <p class="mb-0">@Model.PatientNationalId</p>
            </td>
        </tr>
        </tbody>
    </table>
    <hr/>
    <table class="table mt-4">
        <thead class="table-light">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Dosage</th>
            <th scope="col">Quantity</th>
        </tr>
        </thead>
        <tbody>
        @for (var i = 0; i < Model.DrugItems.Count; i++)
        {
            var drugItem = Model.DrugItems[i];
            <tr>
                <th scope="row">@(i + 1)</th>
                <td>@drugItem.Name</td>
                <td>@drugItem.Dosage</td>
                <td>@drugItem.Quantity</td>
            </tr>
        }
        </tbody>
    </table>
</div>
</body>
</html>